NAME = client_test.out

SRCS = main.cpp \
		../../../src/core/server.cpp \
		../../../src/core/client.cpp \
		../../../src/event/epoll.cpp \
		../../../toolbox/string.cpp \
		../../../toolbox/stepmark.cpp
OBJS = $(SRCS:.cpp=.o)

CXX = c++
CXXFLAGS = -Wall -Wextra -Werror -std=c++98

run: $(NAME)
	./$(NAME)

$(NAME): $(OBJS)
	$(CXX) $(CXXFLAGS) -o $@ $(OBJS)

clean:
	rm -f $(OBJS) $(NAME)

fclean: clean
	rm -f $(NAME)

re: fclean all

all: $(NAME)

.PHONY: all clean fclean re run
